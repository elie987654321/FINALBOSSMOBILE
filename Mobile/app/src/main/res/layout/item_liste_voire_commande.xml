<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        >

        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/menu_icon"/>
        </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/itemCommandeSorteEtType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="SORTE - TYPE"
                />
            <TextView
                android:id="@+id/itemCommandePrixUnitaire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Price : 00.0$"
                />
            <TextView
                android:id="@+id/itemCommandePrixTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Total : 00.0$"
                />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="100dp"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/itemCommandeBoutonPlus"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="+"
                />
            <TextView
                android:id="@+id/itemCommandeNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_gravity="center"
                />
            <Button
                android:id="@+id/itemCommandeBoutonMoins"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="-"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>