<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/itemListePizzaImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/itemListePizzaSorte"
        android:layout_width="91dp"
        android:layout_height="19dp"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="16dp"
        android:text="Sorte"
        app:layout_constraintBottom_toTopOf="@+id/itemListePizzaSpinnerType"
        app:layout_constraintStart_toStartOf="@+id/itemListePizzaSpinnerType" />

    <TextView
        android:id="@+id/itemListePizzaPrix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="53dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="57dp"
        android:text="Prix"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/itemListePizzaSorte"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/itemListePizzaSpinnerType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/itemListePizzaBoutonAjouter"
        app:layout_constraintEnd_toEndOf="@+id/itemListePizzaBoutonAjouter" />

    <Button
        android:id="@+id/itemListePizzaBoutonAjouter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="113dp"
        android:layout_marginEnd="24dp"
        android:text="AJOUTER"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>