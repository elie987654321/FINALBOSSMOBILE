<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="100dp"
        >
        <EditText
            android:id="@+id/inscriptionFragName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom"
            />
        <EditText
            android:id="@+id/inscriptionFragEmail"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Courriel"
            />
        <EditText
            android:id="@+id/inscriptionFragPassword"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mot de passe"
            />
        <EditText
            android:id="@+id/inscriptionFragAdresse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Addresse"
            />
        <EditText
            android:id="@+id/inscriptionFragPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="Telephone"
            />
        <Button
            android:id="@+id/inscriptionFragButtonCreateAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/creer_un_compte"
            />
        <TextView
            android:id="@+id/inscriptionFragErreur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFF0000"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>